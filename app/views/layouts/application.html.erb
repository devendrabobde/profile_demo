<!DOCTYPE html>
<html>
<head>
  <title>Auth</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash#{name}" %>
	<% end %>
	
	<div id="user_nav">
		<% if current_user %>
			logged in as <%= current_user.email %>
			<%= link_to "Complete your Profile", ' /users/:user_id/profiles/new' %>
			<%= link_to "Log Out", log_out_path %>
		<% else %>
			<%= link_to "sign_up", sign_up_path %> or
			<%= link_to "Log in", log_in_path %>
		<% end %>
	</div>
	
<%= yield %>

</body>
</html>
